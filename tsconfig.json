{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": "packages",
    "paths": {
      "@splish-me/editor": ["editor/src"],
      "@splish-me/editor-html-renderer": ["editor-html-renderer/src"],
      "@splish-me/editor-renderer": ["editor-renderer/src"],
      "@splish-me/editor-ui": ["editor-ui/src"],
      "@splish-me/editor-*": ["*/src"]
    }
  }
}
