{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "esnext",
    "module": "es2015",
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true
  }
}
